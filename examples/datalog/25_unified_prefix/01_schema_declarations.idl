// Test: Unified Prefix Schema Declarations
// Description: Tests persistent and transient schema declarations using + prefix

.kg create test_unified_schema_n25t01
.kg use test_unified_schema_n25t01

// Persistent schema declaration (new syntax - replaces 'rel')
+employee(id: int, name: string, dept: int)
+department(id: int, name: string)

// Insert data using persistent inserts
+employee[(1, "Alice", 10), (2, "Bob", 20), (3, "Charlie", 10)]
+department[(10, "Engineering"), (20, "Sales")]

// Query employees
?employee(Id, Name, Dept)

// Query departments
?department(Id, Name)

// Cleanup
.kg use default
.kg drop test_unified_schema_n25t01
