// Test: Explicit Relation Schema
// Category: Rel Schemas
// Description: Tests explicit rel schema declaration with column types

.db create test_rel_schema
.db use test_rel_schema

// Declare relation schema explicitly
rel employee(emp_id: int, name: string, dept_id: int).
rel department(dept_id: int, dept_name: string).

// Insert employees
+employee[(1, "Alice", 10), (2, "Bob", 10), (3, "Charlie", 20)].

// Insert departments
+department[(10, "Engineering"), (20, "Sales")].

// Query employees
?- employee(Id, Name, Dept).

// Query departments
?- department(Id, Name).

// Create view joining employee and department
view emp_dept(EmpName: string, DeptName: string) :-
    employee(_, EmpName, DeptId),
    department(DeptId, DeptName).

?- emp_dept(E, D).

// Cleanup
.db use default
.db drop test_rel_schema
