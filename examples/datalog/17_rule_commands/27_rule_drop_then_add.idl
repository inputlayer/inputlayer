// Test: Drop rule then add new clauses

.kg create test_drop_add_n17t27
.kg use test_drop_add_n17t27

+items[(1,), (2,), (3,)]

// Create a rule
+doubled(X, Y) <- items(X), Y = X * 2
?doubled(X, Y)

// Drop the rule
.rule drop doubled

// Verify rule is gone
.rule

// Add new version of the rule
+doubled(X, Y) <- items(X), Y = X * 3
?doubled(X, Y)

.kg use default
.kg drop test_drop_add_n17t27
