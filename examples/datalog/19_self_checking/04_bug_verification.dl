// Bug Verification Test
// Tests 3-column wildcard pattern with arithmetic in head

.db create test_bug_verification
.db use test_bug_verification

// 3-column source relation with unique values
+src3[(1, 7777, 999), (2, 8888, 888)].
+link[(1, 1001), (2, 1002)].

// D+1 should produce 7778 and 8889
result(Y, D+1) :- src3(X, D, _), link(X, Y).

?- result(A, B).

.db use default
.db drop test_bug_verification
