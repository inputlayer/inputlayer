% Test: Connected components pattern
% Expected: Find connected nodes
% Category: 18_advanced_patterns
% Priority: P2 - Advanced patterns

.kg create test_components
.kg use test_components

+edge[("a", "b"), ("b", "c"), ("d", "e"), ("f", "f")].

% Symmetric closure
+connected(X, Y) :- edge(X, Y).
+connected(X, Y) :- edge(Y, X).

% Transitive closure
+connected(X, Z) :- connected(X, Y), connected(Y, Z).

?- connected(X, Y).

.kg use default
.kg drop test_components
