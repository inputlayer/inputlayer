// Test: SIP join with arithmetic filter condition.
// Demonstrates SIP reducing scan + filter combination.
.kg create test_sip_filter_n80t06
.kg use test_sip_filter_n80t06

+product[(1, "widget", 50), (2, "gadget", 150), (3, "doohickey", 75)]
+inventory[(1, 100), (2, 5), (3, 30)]

// Join products with inventory, filter for expensive products with low stock
?product(Id, Name, Price), inventory(Id, Stock), Price > 60, Stock < 50

// Cleanup
.kg use default
.kg drop test_sip_filter_n80t06
