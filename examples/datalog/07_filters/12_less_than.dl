% Test: Less than filter
% Expected: Filter by < comparison
% Category: 07_filters
% Priority: P2 - Filter patterns

.kg create test_lt
.kg use test_lt

+temps[(1, 30), (2, 15), (3, -5), (4, 25), (5, 0)].

% Freezing temperatures (< 0)
freezing(Id, Temp) :- temps(Id, Temp), Temp < 0.

% Cold (< 20)
cold(Id, Temp) :- temps(Id, Temp), Temp < 20.

?- freezing(Id, T).
?- cold(Id, T).

.kg use default
.kg drop test_lt
