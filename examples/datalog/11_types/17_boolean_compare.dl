% Test: Boolean values in comparisons
% Expected: Boolean comparisons work correctly
% Category: 11_types
% Priority: P1 - Type handling

.kg create test_bool_cmp
.kg use test_bool_cmp

% Boolean data
+flags[(1, true), (2, false), (3, true), (4, false)].

% Filter by boolean value
active(Id) :- flags(Id, Val), Val = true.

?- active(Id).

% Filter inactive
inactive(Id) :- flags(Id, Val), Val = false.

?- inactive(Id).

.kg use default
.kg drop test_bool_cmp
