% Test: Mixed type arithmetic

.kg create test_mixed_arith_n11t49
.kg use test_mixed_arith_n11t49

+integers[(1,), (2,), (3,)].
+floats[(1.5,), (2.5,), (3.5,)].

% Integer arithmetic
int_doubled(X, D) :- integers(X), D = X * 2.

?- int_doubled(X, D).

% Float arithmetic
float_doubled(X, D) :- floats(X), D = X * 2.

?- float_doubled(X, D).

% Integer division
int_div(X, D) :- integers(X), D = X / 2.

?- int_div(X, D).

.kg use default
