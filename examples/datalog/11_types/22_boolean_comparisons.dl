% Test: Boolean in comparisons
% Expected: Boolean values can be compared
% Category: 11_types
% Priority: P2 - Type edge cases

.kg create test_bool_cmp
.kg use test_bool_cmp

+flags[(1, true), (2, false), (3, true)].

% Filter by boolean value
is_true(Id) :- flags(Id, B), B = true.

?- is_true(Id).

is_false(Id) :- flags(Id, B), B = false.

?- is_false(Id).

.kg use default
.kg drop test_bool_cmp
