// Test: Soft delete pattern (mark as deleted)

.kg create test_soft_del_n27t31
.kg use test_soft_del_n27t31

+items[(1, "a"), (2, "b"), (3, "c")]
+deleted[]

?items(Id, Name)

// Mark items 1 and 2 as deleted
+deleted[(1,), (2,)]

// Active items (not deleted)
active(Id, Name) <- items(Id, Name), !deleted(Id)

?active(Id, Name)

.kg use default
.kg drop test_soft_del_n27t31
