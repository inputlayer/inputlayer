// Test: EXISTS-like pattern

.kg create test_exists_n10t30
.kg use test_exists_n10t30

+customers[(1, "Alice"), (2, "Bob"), (3, "Carol")]
+orders[(1, 100), (1, 200), (3, 150)]

// Customers who have at least one order (EXISTS)
has_orders(Name) <- customers(Id, Name), orders(Id, _)

?has_orders(Name)

// Customers without any orders (NOT EXISTS)
no_orders(Name) <- customers(Id, Name), !orders(Id, _)

?no_orders(Name)

.kg use default
.kg drop test_exists_n10t30
