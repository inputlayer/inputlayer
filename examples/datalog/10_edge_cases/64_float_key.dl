% Test: Float as key
% Expected: Float values work as keys
% Category: 10_edge_cases
% Priority: P2 - Edge cases

.kg create test_float_key
.kg use test_float_key

+data[(1.5, "one_half"), (2.5, "two_half"), (3.0, "three")].

?- data(Key, Val).

% Filter floats > 2
big_floats(Key, Val) :- data(Key, Val), Key > 2.0.

?- big_floats(Key, Val).

.kg use default
.kg drop test_float_key
