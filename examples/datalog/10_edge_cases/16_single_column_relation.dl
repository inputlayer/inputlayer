% Test: Relation with single column (unary relation)
% Expected: Works correctly
% Category: 10_edge_cases
% Priority: P1 - Boundary condition

.kg create test_unary
.kg use test_unary

% Insert facts into unary relation
+ids[(1,), (2,), (3,), (42,), (100,)].

% Query all
?- ids(X).

% Filter
?- ids(X), X > 10.

% Join unary with binary
+scores[(1, 100), (2, 200), (3, 300)].
combined(X, S) :- ids(X), scores(X, S).
?- combined(X, S).

.kg use default
.kg drop test_unary
