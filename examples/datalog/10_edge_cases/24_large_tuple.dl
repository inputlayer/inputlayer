% Test: Large tuple (many columns)
% Expected: Handles tuples with many columns
% Category: 10_edge_cases
% Priority: P1 - Edge cases

.kg create test_large_tuple
.kg use test_large_tuple

% 8-column tuple
+wide[(1, 2, 3, 4, 5, 6, 7, 8)].

?- wide(A, B, C, D, E, F, G, H).

% Join with itself on first column
self_join(A, B, C) :- wide(A, B, C, _, _, _, _, _), wide(A, _, _, D, E, F, G, H).

?- self_join(A, B, C).

.kg use default
.kg drop test_large_tuple
