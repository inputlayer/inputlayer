% Test: Ternary relation patterns
% Expected: 3-column relations work correctly
% Category: 10_edge_cases
% Priority: P2 - Edge cases

.kg create test_ternary
.kg use test_ternary

+triple[(1, 2, 3), (2, 3, 4), (3, 4, 5)].

% Project pairs
first_two(A, B) :- triple(A, B, _).
last_two(B, C) :- triple(_, B, C).

?- first_two(A, B).
?- last_two(B, C).

% Join on middle column
joined(A, B, C, D) :- triple(A, B, C), triple(B, C, D).

?- joined(A, B, C, D).

.kg use default
.kg drop test_ternary
