// Test: Escape Sequences in Strings
// Description: Tests all documented escape sequences: \", \\, \n, \t, \r

.kg create test_escapes_n35t32
.kg use test_escapes_n35t32

// Double quote escape \"
+quote_strings[(1, "He said \"hello\""), (2, "Contains \"quotes\" inside")]
?quote_strings(Id, S)

// Newline escape \n
+newline_strings[(1, "line1\nline2"), (2, "first\nsecond\nthird")]
?newline_strings(Id, S)

// Tab escape \t
+tab_strings[(1, "col1\tcol2"), (2, "name\tage\tcity")]
?tab_strings(Id, S)

// Carriage return escape \r
+cr_strings[(1, "windows\r\nstyle"), (2, "old\rmac")]
?cr_strings(Id, S)

// Combined escapes
+mixed_escapes[(1, "path\\to\\file\twith \"tabs\""), (2, "line1\nline2\twith\ttabs")]
?mixed_escapes(Id, S)

// Cleanup
.kg use default
.kg drop test_escapes_n35t32
