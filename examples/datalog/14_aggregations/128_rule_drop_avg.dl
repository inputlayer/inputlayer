% Test: Rule drop with avg aggregation
% Description: Tests dropping an avg rule and redefining it

.kg create test_drop_avg_n14t128
.kg use test_drop_avg_n14t128

+score[(1, 80), (1, 90), (1, 85), (2, 70), (2, 75)].

+avg_score(Student, avg<Points>) :- score(Student, Points).

?- avg_score(X, Y).

.rule drop avg_score

?- avg_score(X, Y).

+avg_score(Student, avg<Points>) :- score(Student, Points).

?- avg_score(X, Y).

.kg use default
.kg drop test_drop_avg_n14t128
