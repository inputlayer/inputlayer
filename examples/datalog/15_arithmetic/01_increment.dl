// Test: Increment Computed Column
// Category: 15_arithmetic
// Description: Tests d+1 arithmetic in rule head for BFS-style distance

.db create test_arith_inc
.db use test_arith_inc

// Insert edge data: edge(from, to)
+edge[(1, 2), (2, 3), (3, 4)].

// Base case: distance from node 1 is 0
+dist[(1, 0)].

// Recursive case: extend distance by 1
dist(Y, D+1) :- dist(X, D), edge(X, Y).

// Query distances
?- dist(X, Y).

// Cleanup
.db use default
.db drop test_arith_inc
