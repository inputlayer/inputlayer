// Test: Float and integer mixing in arithmetic

.kg create test_float_int_n15t45
.kg use test_float_int_n15t45

// Integer data
+ints[(1,), (2,), (3,)]

// Float data
+floats[(1.5,), (2.5,), (3.5,)]

// Integer to float conversion via arithmetic
int_to_float(X, Y) <- ints(X), Y = X * 1.0

?int_to_float(X, Y)

// Float plus integer (conceptually)
float_plus_one(X, Y) <- floats(X), Y = X + 1

?float_plus_one(X, Y)

.kg use default
.kg drop test_float_int_n15t45
