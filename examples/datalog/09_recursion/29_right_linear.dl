% Test: Right-linear recursion
% Expected: Right-linear recursion pattern works
% Category: 09_recursion
% Priority: P2 - Recursion patterns

.kg create test_right_linear
.kg use test_right_linear

+edge[(1, 2), (2, 3), (3, 4), (4, 5)].

% Right-linear: recursive call at end
+right_reach(X, Y) :- edge(X, Y).
+right_reach(X, Z) :- edge(X, Y), right_reach(Y, Z).

?- right_reach(1, Y).

% Compare with left-linear
+left_reach(X, Y) :- edge(X, Y).
+left_reach(X, Z) :- left_reach(X, Y), edge(Y, Z).

?- left_reach(1, Y).

.kg use default
.kg drop test_right_linear
