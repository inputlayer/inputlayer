% Test: Find root nodes in tree
% Expected: Nodes with no parent
% Category: 09_recursion
% Priority: P2 - Recursion patterns

.kg create test_root
.kg use test_root

+parent[(1, 2), (1, 3), (2, 4), (2, 5), (6, 7)].

% All nodes
+node(X) :- parent(X, _).
+node(Y) :- parent(_, Y).

% Root nodes have no parent
+root(X) :- node(X), !parent(_, X).

?- root(X).

.kg use default
.kg drop test_root
