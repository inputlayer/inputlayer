% Test: Find leaf nodes in tree
% Expected: Nodes with no children
% Category: 09_recursion
% Priority: P2 - Recursion patterns

.kg create test_leaves
.kg use test_leaves

+parent[(1, 2), (1, 3), (2, 4), (2, 5), (3, 6)].

% All nodes
+all_nodes(X) :- parent(X, _).
+all_nodes(X) :- parent(_, X).

% Leaf nodes: nodes with no children
leaf(X) :- all_nodes(X), !parent(X, _).

?- leaf(X).

.kg use default
.kg drop test_leaves
