% Test: Find leaf nodes in tree
% Expected: Nodes with no children
% Category: 09_recursion
% Priority: P2 - Recursion patterns

.kg create test_leaf
.kg use test_leaf

+parent[(1, 2), (1, 3), (2, 4), (2, 5)].

% All nodes
+node(X) :- parent(X, _).
+node(Y) :- parent(_, Y).

% Leaf nodes have no children
+leaf(X) :- node(X), !parent(X, _).

?- leaf(X).

.kg use default
.kg drop test_leaf
