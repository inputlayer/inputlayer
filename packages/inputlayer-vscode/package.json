{
  "name": "inputlayer-idl",
  "displayName": "InputLayer IDL",
  "description": "Syntax highlighting for InputLayer (.idl/.dl) files",
  "version": "0.1.0",
  "publisher": "inputlayer",
  "license": "MIT",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "languages": [
      {
        "id": "inputlayer-datalog",
        "aliases": [
          "InputLayer",
          "IDL"
        ],
        "extensions": [
          ".idl",
          ".dl"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "inputlayer-datalog",
        "scopeName": "source.idl",
        "path": "./syntaxes/idl.tmLanguage.json"
      }
    ]
  },
  "configurationDefaults": {
    "[inputlayer-datalog]": {
      "editor.fontLigatures": "'calt', 'liga'",
      "editor.bracketPairColorization.enabled": true
    }
  }
}
